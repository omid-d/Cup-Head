<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.MainMenuPageController"
            prefHeight="720" prefWidth="1280" stylesheets="@../css/style.css" fx:id="border">
<top>
    <GridPane fx:id="grid" alignment="CENTER">

    </GridPane>

</top>

<center>

    <VBox spacing="10" alignment="CENTER" maxWidth="350" fx:id="vbox">
        <Text id="title" text="Main Menu" styleClass="title"/>
        <Button  styleClass="primary-btn" text="new game" onMouseClicked="#newGame" />
        <Button  styleClass="secondary-btn" text="profile menu" onMouseClicked="#goToProfileMenu"/>
        <Button  styleClass="secondary-btn" text="score chart" onMouseClicked="#scoreBoard"/>
        <Button  styleClass="secondary-btn" text="exit game" onMouseClicked="#exit"/>
    </VBox>

</center>

    <stylesheets>
        <URL value="@../css/style.css" />
    </stylesheets>
</BorderPane>
